#ifndef CONFIG_H_INCLUDED
#define CONFIG_H_INCLUDED

// Debug
#cmakedefine CONFIG_DEBUG

// Version
#define CONFIG_TD_VERSION "${TARGET_VERSION_MAJOR}.${TARGET_VERSION_MINOR}.${TARGET_VERSION_PATCH}"

// Name of application and its some dirs
#define CONFIG_TD_NAME "${CONFIG_TD_NAME}"


// FullName of application
#define CONFIG_TD_FULLNAME "${CONFIG_TD_FULLNAME}"

// Maximum number of joysticks
#define CONFIG_JOYSTICK_MAX_NUMBER ${CONFIG_JOYSTICK_MAX_NUMBER}

// Usage forcefeedback for joysticks
#cmakedefine CONFIG_JOYSTICK_USE_FORCEFEEDBACK

// PATHs:
// Absolute path to default share directory (with default configs)
#define CONFIG_PATH_ROOT_SHARE "${CMAKE_INSTALL_PREFIX}/${CONFIG_PATH_SHARE}/"

// Relative path to default data directory
#define CONFIG_PATH_HOME_SHARE ".config/${CONFIG_TD_NAME}/"

// Relative path to data directory
#define CONFIG_PATH_DATA "data/"

// Relative path to config directory
#define CONFIG_PATH_CONFIG "config/"

// Relative path to users directory
#define CONFIG_PATH_USERS "users/"

#endif //CONFIG_H_INCLUDED
