<?xml version="1.0"?>
<td version="0.1.0">
  <Game>
    <path>
      <!-- Paths of game -->
      <ogre_plugins>${CONFIG_OGRE_PLUGINS_PATH}</ogre_plugins>
      <root_data>${CONFIG_PATH_DATA}/</root_data>
      <user_data>.config/${CONFIG_TD_NAME}/</user_data>
      <data>data/</data>
      <users>users/</users>
    </path>
    <config>
      <ogre>
        <plugins>
          <!-- Plugins for Ogre -->
          <plugin value="Plugin_ParticleFX" />
          <plugin value="Plugin_BSPSceneManager" />
          <plugin value="Plugin_CgProgramManager" />
          <plugin value="Plugin_PCZSceneManager" />
          <plugin value="Plugin_OctreeZone" />
          <plugin value="Plugin_OctreeSceneManager" />
        </plugins>
        <video choice="OpenGL">
          <!-- Video render engines -->
          <engine name="OpenGL" plugin="RenderSystem_GL">
            <!-- Default video engine -->
            <display>
              <!-- Display configuration -->
              <x>800</x>
              <y>600</y>
              <frequency>60</frequency>
            </display>
            <full_screen>
              <!-- Run in fullscreen? -->
              <enabled>false</enabled>
            </full_screen>
            <fsaa>
              <!-- FSAA -->
              <enabled>false</enabled>
            </fsaa>
            <vsync>
              <!-- Vertical Synchronization -->
              <enabled>true</enabled>
            </vsync>
            <rtt>
              <!-- RTT Preferred Mode -->
              <enabled>true</enabled>
              <mode>FBO</mode>
            </rtt>
            <srgb>
              <!-- sRGB Gamma Conversion -->
              <enabled>false</enabled>
            </srgb>
          </engine>
        </video>
        <resources>
          <!-- Path to ogre resources (from $root_data/$data or $home_data/$data) -->
          <Bootstrap>
            <Zip value="graphic/OgreCore.zip" />
            <Zip value="graphic/SdkTrays.zip" />
          </Bootstrap>
          <General>
            <FileSystem value="graphic" />
            <FileSystem value="graphic/meshes" />
            <FileSystem value="graphic/textures" />
          </General>
        </resources>
      </ogre>
    </config>
  </Game>
</td>
